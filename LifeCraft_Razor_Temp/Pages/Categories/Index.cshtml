@page
@model LifeCraft_Razor_Temp.Pages.Categories.IndexModel



<div style="display:flex ; justify-content:space-between; align-content:center">
	<h1>Category List</h1>
	<a asp-page="Categories/Create" class="btn" style="box-shadow: 0 0 5px grey; padding-top:1%;">
		Add category
	</a>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Category Name</th>
			<th>Display Order!</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.DisplayOrder</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-page="categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="background-color:rgb(11,11,11)">
							Edit
						</a>
						<a asp-page="categories/delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="background-color:red">
							Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table> 