@model List<Event>


<div style="display:flex ; justify-content:space-between; align-content:center">
	<h1>Event List</h1>
	<a asp-action="Upsert" asp-controller="Event" class="btn" style="box-shadow: 0 0 5px grey; padding-top:1%;">
		Add Event
	</a>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Event Name</th>
			<th>Event Description</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@* Display events based on the lastest dates*@
		@foreach (var obj in Model.OrderBy(u=> u.Date))
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.Description</td>
				@{
					if (obj.Date != null)
					{
						<td>@obj.Date</td>
					}else{
						<td>Not data yet</td>
					}
				}
				<td>@obj.Category.Name</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Event" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="background-color:rgb(11,11,11)">
							Edit
						</a>
						<a asp-controller="Event" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="background-color:red">
							Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table> 